<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>

    <h1>
        <a href="/">MyFavoriteThings</a>
    </h1>
    <nav class="pc-nav">
        <ul>
            <li>
              <%= form_with(url: things_search_things_path, local: true, method: :get, class: "search-form") do |form| %>
                <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "input-box" %>
                <% form.submit "検索", class: "search-btn" %>
                <button class="search-button">
                  <%= image_tag "search.png", class:"search-icon" %>
                </button>
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li><%= link_to "MYPAGE", user_path(current_user), class: "user-nickname-1"  %></li>
              <li><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: "logout-1" %></li> 
            <% else %>
              <li><%= link_to 'LOGIN', new_user_session_path, class: "login-1" %></li>
              <li><%= link_to 'SIGNUP', new_user_registration_path, class: "sign-up-1" %></li>
            <% end %>
        </ul>
    </nav>

</header>